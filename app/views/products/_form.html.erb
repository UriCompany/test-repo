  <div class="field">
    <%= form.label :category %>
    <%= form.text_field :category, id: :product_category %>
  </div>

  <div class="field">
    <%= form.label :unit_price %>
    <%= form.text_field :unit_price, id: :product_unit_price %>
  </div>

  <div class="field">
    <%= form.label :selling_price %>
    <%= form.text_field :selling_price, id: :product_selling_price %>
  </div>

  <div class="field">
    <%= form.label :vat %>
    <%= form.text_field :vat, id: :product_vat %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date, id: :product_date %>
  </div>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.number_field :quantity, id: :product_quantity %>
  </div>

  <div class="actions">
