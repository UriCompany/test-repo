<p id="notice"><%= notice %></p>

<h1>Purchase Orders</h1>

<table>
  <thead>
    <tr>
      <th>Product name</th>
      <th>Product type</th>
      <th>Unit price</th>
      <th>Quantity</th>
      <th>Supplier name</th>
      <th>Supplier code</th>
      <th>Date</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchase_orders.each do |purchase_order| %>
      <tr>
        <td><%= purchase_order.product_name %></td>
        <td><%= purchase_order.product_type %></td>
        <td><%= purchase_order.unit_price %></td>
        <td><%= purchase_order.quantity %></td>
        <td><%= purchase_order.supplier_name %></td>
        <td><%= purchase_order.supplier_code %></td>
        <td><%= purchase_order.date %></td>
        <td><%= purchase_order.location %></td>
        <td><%= link_to 'Show', purchase_order %></td>
        <td><%= link_to 'Edit', edit_purchase_order_path(purchase_order) %></td>
        <td><%= link_to 'Destroy', purchase_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

